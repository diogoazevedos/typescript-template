{
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "husky",
		"bundle": "esbuild --bundle --minify --sourcemap --format=esm --platform=node --target=node24.11 --outdir=target/build",
		"test": "xo && tsc && c8 node --test"
	},
	"engines": {
		"node": ">=24.11"
	},
	"devDependencies": {
		"@commitlint/cli": "20.3.1",
		"@commitlint/config-conventional": "20.3.1",
		"@sindresorhus/tsconfig": "8.1.0",
		"@types/node": "24.10.7",
		"c8": "10.1.3",
		"esbuild": "0.27.2",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"typescript": "5.9.3",
		"xo": "1.2.3"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": "xo --fix"
	},
	"c8": {
		"reporter": [
			"text",
			"html",
			"lcov"
		],
		"extension": [
			".ts"
		],
		"reportDir": "./target/coverage"
	}
}
